{
  "manifest_version": 2,

  "name": "Play now button",
  "description": "Adds play buttons to streaming stations",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  /*
  "background": {
    "scripts": ["background.js"]
  },
  */

   "content_scripts": [ 
   {
    "js": [ "js/jq.js", "js/shared.js" ],
      "css": [ "css/s.css"],
    "matches": [ "http://*/*", "https://*/*"]
  },

   {
      "js": [ "js/boomkat.js" ],
      "matches": [ "*://*.boomkat.com/*" ]
   } ,
   {
      "js": [ "js/juno.js" ],
      "matches": [ "*://*.juno.co.uk/*" ]
   } ,
   {
      "js": [ "js/aq.js" ],
      "matches": [ "*://*.aquariusrecords.org/*" ]
   } ,
     {
      "js": [  "js/metal-archives.js" ],
      "matches": [ "*://*.metal-archives.com/*" ]
   },
     {
      "js": [  "js/discogs.js" ],
      "matches": [ "*://*.discogs.com/*" ]
   } ,
     {
      "js": [  "js/quietus.js" ],
      "matches": [ "*://*.thequietus.com/*" ]
   } 
    ,
     {
      "js": [  "js/tinymixtapes.js" ],
      "matches": [ "*://*.tinymixtapes.com/*" ]
   } ,
     {
      "js": [  "js/metacritic.js" ],
      "matches": [ "*://*.metacritic.com/browse/albums/*" ]
   }  ,
     {
      "js": [  "js/rym.js" ],
      "matches": [ "*://*.rateyourmusic.com/*" ]
   }  ,
     {
      "js": [  "js/drownedinsound.js" ],
      "matches": [ "*://*.drownedinsound.com/*" ]
   }   
   ],
  "permissions": [
    "tabs"
    ]
}